{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Sign IN</h2>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Contact Section Begin -->
    <form method="post">
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>CHALLENGEONE</span>
                    <h2>PREMIER SATELLITE TUNISIEN

                    </h2>

                </div>

            </div>
            <div class="col-lg-8">
                <div class="leave-comment">

                    <h2 style="color: #004999;margin-bottom: 30px;margin-left:500px;">Se Connecter</h2>
                    <p style="color: #FFFFFF;margin-bottom: 30px;margin-left:500px;">REMPLIR LE FORMULAIRE</p>


    {% if error %}
        <div class="alert alert-danger" style="margin-left:420px;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
                    <div class="col-lg-8" style="color: #004999;margin-bottom: 30px;margin-left:350px;">
    <label for="inputEmail">Email</label>
                        <br>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
                        <br>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

                    </div>
                    <div class="col-lg-8" style="color: #004999;margin-bottom: 30px;margin-left:450px;">
    <button class="btn btn-lg btn-primary" style="color: #004999;margin-left:50px;"type="submit">
        Se Connecter
    </button>
    <p>Vous n'avez pas de compte? <a href="{{ path('app_client_new')}}">S'inscrire</a></p>
    <p>Mot de passe oubli√© <a href="{{ path('app_forgot_password_request')}}">Cliquez ici</a></p>
                    </div></div></div></div></div></section>
    </form>
{% endblock %}
