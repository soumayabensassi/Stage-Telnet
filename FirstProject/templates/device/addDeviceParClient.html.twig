{% extends 'base.html.twig' %}

{% block title %}New device{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Votre Device</h2>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title contact-title">
                        <span>CHALLENGEONE</span>
                        <h2>PREMIER SATELLITE TUNISIEN

                        </h2>

                    </div>

                </div>
                <div class="col-lg-8">
                    <div class="leave-comment">

                        <h2 style="color: #004999;margin-bottom: 30px;margin-left:480px;">Profite</h2>
                        <p style="color: #FFFFFF;margin-bottom: 30px;margin-left:450px;">REMPLIR LE FORMULAIRE</p>

                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}},{'attr': {'class': 'signup-form'}}) }}

                        {{ form_errors(form.serialnumber) }}
                        {{ form_widget(form.serialnumber,{'attr':{'placeholder':'serialnumber*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}
                        <br>
                        {{ form_errors(form.designiation) }}
                        {{ form_widget(form.designiation,{'attr':{'placeholder':'designiation *','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}

                        {{ form_widget(form.confirmer,{'attr':{'style':'border-color: #0080FF;background:#004999;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}


                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
