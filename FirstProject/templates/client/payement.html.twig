{% extends 'base.html.twig' %}

{% block title %}New Client{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <!-- Breadcrumb Section End -->

    <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title contact-title">
                        <span>CHALLENGEONE</span>
                        <h2>PREMIER SATELLITE TUNISIEN

                        </h2>

                    </div>

                </div>
                <div class="col-lg-8">
                    <div class="leave-comment">

                        <h2 style="color: #004999;margin-bottom: 30px;margin-left:480px;">Payement</h2>
                        <p style="color: #FFFFFF;margin-bottom: 30px;margin-left:450px;">REMPLIR LE FORMULAIRE</p>
                        <div class="col-lg-10  col-md-8" style="margin-left: 235px">
                            <div class="ps-item">
                                <div class="pi-price">
                        {% if abonnement.nom !='Personnalisé' %}

                            <h5 style="color: #5a6268"> {{ abonnement.offre.DomaineApplication.prix * abonnement.offre.nbrdevice }} DT/ Mois <button class="btn btn-lg btn" style="margin-left:15px;width:90px;"type="submit">
                                   <a  href="{{ path('chnagerDateAbonnement', {'id': abonnement.id}) }}">Changer</a>
                                </button>   </h5>
                                    {% if abonnement.duree ==NULL %}
                                        <h5 style="color: #5a6268">Prix à Payer  :{{ abonnement.offre.DomaineApplication.prix * abonnement.offre.nbrdevice }} DT</h5>

                                    {% else %}
                            <h5 style="color: #5a6268">Prix à Payer  :{{ abonnement.offre.DomaineApplication.prix * abonnement.offre.nbrdevice * abonnement.duree}}  DT</h5>
                                    {% endif %}
                                    {% else %}
                                        <h5 style="color: #5a6268">Prix à Payer  :{{ abonnement.DomaineApplication.prix * abonnement.nbrdevice * abonnement.duree}}  DT</h5>

                        {% endif %}
                            </div>
                            </div>
                        </div>
                        {{ error }}

                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}},{'attr':{'placeholder':'nom*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}

                        {{ form_errors(form.client) }}
                        {{ form_widget(form.client,{'attr':{'placeholder':'client*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}
                        <br>
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email,{'attr':{'placeholder':'email*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}
                        <br>
                        {{ form_errors(form.numcarte) }}
                        {{ form_widget(form.numcarte,{'attr':{'placeholder':'numero de la carte *','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}
                        <br>  {{ form_errors(form.cvv2) }}
                        {{ form_widget(form.cvv2,{'attr':{'placeholder':'CVV2e*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}
                        {{ form_errors(form.expire) }}
                        <br>  {{ form_widget(form.expire,{'attr':{'placeholder':'expire*','style':'border-color: #0080FF;background:transparent;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}




                        {{ form_widget(form.payer,{'attr':{'style':'border-color: #0080FF;background:#004999;width:80%;height: 46px;font-size: 14px;color: #c4c4c4;margin-bottom: 30px;margin-left:250px;'}}) }}



                        {{ form_end(form) }}

                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- Contact Section End -->

{% endblock %}
