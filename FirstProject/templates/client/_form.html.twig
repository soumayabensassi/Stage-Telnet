{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Profil</h2>

                </div>
            </div>
        </div>
    </div>
</section>


    <!-- BMI Calculator Section Begin -->
    <section class="bmi-calculator-section spad">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <div class="section-title chart-calculate-title">
                        <span>vérifié ton profil</span>
                        <h2>bienvenue M/Mme {{ user.nom }}</h2>
                    </div>
                    <div class="chart-calculate-form">

                        <form action="#">
                            <div class="row">
                                <div class="col-sm-12">
                                    <input  placeholder={{ user.nom }} DISABLED>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" placeholder={{ user.prenom }} DISABLED>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" placeholder={{ user.email }} DISABLED>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" placeholder={{ user.numtel }} DISABLED>
                                </div>

                                {#  if user.isverified==1 %}#}
                                        <nav class="nav-menu">
                                            <ul>
                                              <li >
                                                  <div class="col-lg-12">
                                                      <a style="color: #004999;left: 500px">Passer au Payement</a>

                                                <ul class="dropdown1">

                                                    {% for abos in abo %}

                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                {% if abos.enatentte==1 %}
                                                                <li><a href="{{ path('payement',{'id': abos.id}) }}"> <h4 style="color: white"> Abonnement: {{ abos.nom }}
                                                                        </h4>
                                                            <h3 style="color: #004999">{% if abos.enatentte==1 %}
                                                                Etat : accepté
                                                            {% else %}
                                                                Etat : en Attend
                                                            {% endif %}
                                                            </h3> </a>
                                                                </li>

                                                                {% else %}
                                                                <li><a href="#"> <h4 style="color: white"> Abonnement: {{ abos.nom }}
                                                                        </h4>
                                                                        <h3 style="color: #004999">{% if abos.enatentte==1 %}
                                                                                Etat : accepté
                                                                            {% else %}
                                                                                Etat : en Attend
                                                                            {% endif %}
                                                                {% endif %}
                                                            </h3> </a>
                                                                </li>
                                                            </div>
                                                        </h4>
                                                        </div>
{% endfor %}
                                                </ul>

                                                  </div>
                                              </li>


                                            </ul> </nav>

                                {# {% endif %}#}
                                    </div>
                                    <br>
                                    <br>


                                <div class="col-lg-12">
                                    <button type="submit"><a href="{{ path('app_client_edit', {'id': user.id}) }}">Modifier</a></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- BMI Calculator Section End -->
{% endblock %}