{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Sign IN</h2>

                    </div>
                </div>
            </div>
        </div>
    </section>
<section class="contact-section spad">
    <div class="container">
        <div class="row">
        <div class="signup-text">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div class="container">

                {{ form_start(requestForm) }}
                <div class="signup-title">
                    <h2 style="color: #ffffff">Réinitialisez votre mot de passe</h2>
                    <p>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
                </div>
                {{ form_widget(requestForm.email,{'attr':{'placeholder':'EMAIL*','style':'border-color: #004999;background:transparent;width:100%;height: 46px;font-size: 14px;color: #004999;margin-left:200px;'}}) }}
                <br>
<br>
                <button class="btn btn-lg btn-primary" type="submit" style="background: #004999;margin-left:500px;">
                    Envoyer un e-mail
                </button>

                {{ form_end(requestForm) }}

            </div>
        </div></div></div></section>
        </div>
    </div>
{% endblock %}
