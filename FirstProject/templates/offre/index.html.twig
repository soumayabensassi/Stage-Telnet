{% extends 'back.html.twig' %}

{% block title %}Device index{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="title">
                                <h4>Offres Tables</h4>
                            </div>
                            <nav aria-label="breadcrumb" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Offres Tables</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col-md-6 col-sm-12 text-right">
                            <div class="dropdown">
                                <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    {{ "now"|date("m/d/Y") }}
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- basic table  Start -->
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix mb-20">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Offres Table</h4>

                        </div>
                        <div class="pull-right">
                            <a href="{{ path('app_offre_new') }}" class="btn btn-primary btn-sm scroll-click" ><i class="fa fa-code"></i> ADD Offres</a>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Nombre devices</th>
                            <th>Durée</th>
                            <th>domaine d'application</th>
                            <th>Nombre d'accès</th>
                            <th>delete</th>
                            <th>Update</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for offre in offres %}
                            <tr>
                                <td>{{ offre.nom }}</td>
                                <td>{{ offre.nbrdevice }} Devices</td>
                                <td>{{ offre.duree }} Mois</td>
                                <td>{{ offre.nbracces }} Personnes</td>
                                <td>{{ offre.domaineApplication.nom }} </td>
                                <td>
                                    <button type="button" class="btn btn-info"> <a href="{{ path('deleteoffre', {'id': offre.id}) }}">Delete</a></button>


                                </td>
                                <td>
                                    <button type="button" class="btn btn-info"> <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">Update</a></button>

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="collapse collapse-box" id="basic-table" >
                        <div class="code-box">
                            <div class="clearfix">
                                <a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left"  data-clipboard-target="#basic-table-code"><i class="fa fa-clipboard"></i> Copy Code</a>
                                <a href="#basic-table" class="btn btn-primary btn-sm pull-right" rel="content-y"  data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
                            </div>
                            <pre><code class="xml copy-pre" id="basic-table-code">

							</code></pre>
                        </div>
                    </div>
                </div>
                <!-- basic table  End -->
            </div>
        </div></div>

{% endblock %}
